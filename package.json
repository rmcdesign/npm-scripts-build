{
  "name": "starter",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "config": {
    "port": "3000"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ]
        }
      ]
    ]
  },
  "scripts": {
    "start": "npm run build && npm run server",
    "prepush": "npm run lint",
    "server": "npm-run-all --parallel server:*",
    "server:create": "http-server public/ -p $npm_package_config_port",
    "server:launch": "open http://localhost:$npm_package_config_port",
    "/////////////////////////////WATCH//////////////////////////////////////": "/",
    "watch": "npm-run-all --parallel watch:*",
    "watch:lint": "onchange \"**/*.js\" \"**/*.scss\" -- npm run lint",
    "watch:css": "onchange \"**/*.scss\" -- npm run build:css",
    "watch:js": "onchange \"**/*.js\" -- npm run build:js",
    "lint": "npm-run-all lint:**",
    "lint:js": "eslint --cache --ignore-pattern .gitignore --fix ./",
    "lint:css": "stylelint \"**/*.scss\" --syntax scss",
    "lint:css:fix": "stylefmt -R src/",
    "autoprefixer": "postcss -u autoprefixer --autoprefixer.browsers '&gt; 5%, ie 9' -r public/css/*",
    "mediapacker": "mqpacker -s public/css/* public/css/*",
    "/////////////////////////////BUILD//////////////////////////////////////": "/",
    "clean": "rm -rf public/",
    "prebuild": "npm-run-all lint",
    "build:css": "node-sass src/styles.scss | cssmin > public/css/styles.min.css && npm run autoprefixer && npm run mediapacker",
    "build:js": "simplifyify src/js/scripts.js --bundle --minify --debug --outfile public/js/bundle.js"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^6.7.6",
    "babel-preset-es2015": "^6.22.0",
    "babelify": "^7.3.0",
    "css-mqpacker": "^5.0.1",
    "cssmin": "^0.4.3",
    "eslint": "^3.17.0",
    "http-server": "^0.9.0",
    "mocha": "^3.2.0",
    "node-sass": "^4.5.0",
    "npm-run-all": "^4.0.2",
    "onchange": "^3.2.1",
    "simplifyify": "^3.2.1",
    "stylefmt": "^5.1.2",
    "stylelint": "^7.9.0"
  },
  "dependencies": {
    "postcss-cli": "^3.0.0-beta"
  }
}
